{
  "parser": "babel-eslint",
  "plugins": [
    "flowtype",
    "babel"
  ],
  "extends": [
    "eslint:all",
    "plugin:flowtype/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": true,
    "jest": true
  },
  "rules": {
    "array-element-newline": [2, { "multiline": true }],
    "arrow-parens": [2, "as-needed"],
    "class-methods-use-this": [0],
    "comma-dangle": [2, "always-multiline"],
    "dot-location": [
      2,
      "property"
    ],
    "func-style": [2, "declaration", { "allowArrowFunctions": true }],
    "linebreak-style": 0,
    "max-len": [2, 110],
    "max-statements": [
      2,
      15
    ],
    "no-duplicate-imports": 0,
    "no-extra-parens": 0,
    "no-invalid-this": 0,
    "no-magic-numbers": 0,
    "no-ternary": 0,
    "no-undefined": 0,
    "no-unused-vars": 0,
    "no-use-before-define": [0],
    "object-curly-newline": [0],
    "one-var": [2, "never"],
    "padded-blocks": 0,
    "sort-imports": 0,
    "sort-keys": 0,
    "valid-jsdoc": 0,
    "quote-props": [2, "consistent-as-needed", { "keywords": true, "unnecessary": false }],

    "babel/new-cap": 2,
    "babel/object-curly-spacing": 2,
    "babel/no-invalid-this": 2,
    "babel/semi": 2
  }
}
