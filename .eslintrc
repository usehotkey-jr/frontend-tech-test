{
  "parser": "babel-eslint",
  "plugins": [
    "flowtype"
  ],
  "extends": [
    "eslint:all",
    "plugin:flowtype/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": true,
    "jest": true
  },
  "rules": {
    "array-element-newline": [2, { "multiline": true }],
    "func-style": [2, "declaration", { "allowArrowFunctions": true }],
    "linebreak-style": 0,
    "max-len": [2, 100],
    "no-magic-numbers": 0,
    "no-ternary": 0,
    "no-undefined": 0,
    "no-unused-vars": 0,
    "no-use-before-define": [0],
    "one-var": [2, "never"],
    "padded-blocks": 0,
    "sort-imports": 0,
    "valid-jsdoc": 0,
    "quote-props": [2, "consistent-as-needed", { "keywords": true, "unnecessary": false }]
  }
}
